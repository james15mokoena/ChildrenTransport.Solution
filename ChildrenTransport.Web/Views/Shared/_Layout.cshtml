<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChildrenTransport.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid bg-warning">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" width="50" height="50"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Payment" asp-action="MakePayment">Payment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Invoice">Invoices</a>
                        </li>                      
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Application" asp-action="ChildRegistration">Child Application</a>
                        </li>                                                
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @{
                                if(ViewData["Logged_In"] != null && ViewData["Logged_In"].ToString() == "Admin"){
                                    <a class="nav-link text-dark" asp-controller="Administration" asp-action="AdminOptions">Admin Options</a>
                                }
                                else if(ViewData["Logged_In"] != null && ViewData["Logged_In"].ToString() == "Parent"){
                                    <a class="nav-link text-dark" asp-controller="Authentication" asp-action="ParentLogout"> Logout</a>
                                }
                                else{
                                    <a class="nav-link text-dark" asp-controller="Authentication" asp-action="ParentLogin">Parent Login</a>
                                }                                
                            }
                            
                        </li>                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- footer -->
    <footer class="border-top footer text-muted d-inline-flex bg-warning">
        <div class="container text-black">
            &copy; 2024 - JPM Transportation
        </div>

        <div class="container text-center">

            @{
                if(ViewData["Logged_In"] != null && ViewData["Logged_In"].ToString() == "Admin"){
                    
                    <a style="font-size:18px;color:blue;" asp-controller="Authentication" asp-action="AdminLogout">Admin Logout</a>
                }
                else if(ViewData["Logged_In"] != null && ViewData["Logged_In"].ToString() == "Parent"){
                    <a style="font-size:18px;color:blue;" asp-controller="" asp-action=""></a>
                }
                else {
                    <a style="font-size:18px;color:blue;" asp-controller="Authentication" asp-action="AdminLogin">Admin Login</a>
                }
            }
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
