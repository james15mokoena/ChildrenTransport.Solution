@model ChildrenTransport.Web.Models.Parent;

@{
    ViewData["Title"] = "Parent Login";
}

<div class="container text-center">

    <h1 class="display-6 text-center">Parent Login</h1>        

    <form method="post" class="form text-center" asp-controller="Authentication" asp-action="ProcessParentLogin">

        <label class="form-label"> ID </label>
        <input class="form-control" asp-for="ParentId" type="text" required/>
        <label class="form-label mt-2"> Password </label>
        <input class="form-control" asp-for="Password" type="password" required/>        
        <button class="btn btn-success mt-3"> Login </button>

    </form>

    <p class="mt-3"> Don't have an account?
        <a class="text-center" asp-controller="Application" asp-action="ParentRegistration">Register Parent</a>
    </p>

    @{

        if(TempData["Error"] != null){
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
    }    

</div>
