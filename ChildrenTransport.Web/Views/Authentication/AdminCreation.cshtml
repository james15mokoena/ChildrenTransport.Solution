@model ChildrenTransport.Web.Models.Administrator;

@{
    ViewData["Title"] = "Create Admin Account";
}

<div class="container">

    <h1 class="display-6 text-center">Create Admin Account</h1>

    <form method="get" class="form text-center mt-4" asp-action="ProcessAdminCreation" asp-controller="Authentication">

        <label class="form-label">First Name: </label> <br />
        <input class="form-control" asp-for="FirstName" type="text" required /> <br />
        <label class="form-label">Last Name: </label> <br />
        <input class="form-control" asp-for="LastName" type="text" required /> <br />
        <label class="form-label">Phone: </label> <br />
        <input class="form-control" asp-for="Phone" type="text" required /> <br />
        <label class="form-label">Email: </label> <br />
        <input class="form-control" asp-for="Email" type="text" required /> <br />
        <label class="form-label">Password: </label> <br />
        <input class="form-control" asp-for="Password" type="password" required /> <br />
        <button class="btn btn-primary" style="width:100px;height:40px;" type="submit">Create</button>
    </form>

    @{
        if (TempData["Note"] != null)
        {
            <div class="alert alert-success mt-3 text-center">
                @TempData["Note"]
            </div>
        }
        else if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3 text-center">
                @TempData["Error"]
            </div>
        }
    }

</div>
