@model ChildrenTransport.Web.Models.Administrator;

@{
    ViewData["Title"] = "Admin Login";
}

<style type="text/css">
    
    label{
        font-size:19px;       
    }

</style>

<div class="container text-center">

    <h1 class="display-6 text-center mb-3">Admin Login</h1>

    <form method="get" class="form text-center" asp-action="ProcessAdminLogin" asp-controller="Authentication">

        <label class="form-label">Email: </label> <br/>
        <input class="form-control" asp-for="Email" type="text" required/> <br />
        <label class="form-label">Password: </label> <br/>
        <input class="form-control" asp-for="Password" type="password" required/> <br/>
        <button class="btn btn-primary" style="width:100px;height:40px;" type="submit">Login</button>
    </form>
    
    @{
        if(TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3">
                @TempData["Error"]
            </div>
        }
    }

</div>
