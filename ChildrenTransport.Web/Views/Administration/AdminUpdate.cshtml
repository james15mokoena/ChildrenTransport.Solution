@model ChildrenTransport.Web.Models.Administrator;

<div class="container">

    <h1 class="display-6 text-center">Update Administrator Data</h1>

    <form method="post" class="form text-center mt-4" asp-action="AdminUpdate" asp-controller="Administration">

        <label class="form-label">First Name: </label> <br />
        <input class="form-control" asp-for="FirstName" type="text" /> <br />
        <label class="form-label">Last Name: </label> <br />
        <input class="form-control" asp-for="LastName" type="text" /> <br />
        <label class="form-label">Phone: </label> <br />
        <input class="form-control" asp-for="Phone" type="text"/> <br />
        <label class="form-label">Email: </label> <br />
        <input class="form-control" asp-for="Email" type="text" required /> <br />
        <label class="form-label">Password: </label> <br />
        <input class="form-control" asp-for="Password" type="password" required /> <br />
        <button  class="btn btn-warning" asp-route-option="update" style="width:100px;height:40px;" type="submit"> Update</button>
        <button class="btn btn-danger" asp-route-option="delete" style="width:100px;height:40px;" type="submit"> Delete</button>
    </form>
   
    @{
        if(TempData["Response"] != null)
        {
            <div class="alert alert-success mt-3 text-center">
                <label class="label text-black"> @TempData["Response"]</label>
            </div>
        }
    }
    
</div>

